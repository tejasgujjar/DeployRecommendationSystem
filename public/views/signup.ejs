  </head>

  <body ng-app="RecommendationSystem">
    <header style="text-align:center;">
      <div class="">
        <img style="width:140px;height:120px;" src="public/stylesheets/images/plate.png">
        <h1 style="  font-family: fantasy;"><%= title %></h1>
      </div>
    </header>
    <p style="color:grey;text-align:center;  font-family: fantasy;">Welcome to <%= title %></p>
    <div ng-controller='SignUpCtrl' class="container">

     <div id="signup" ng-show="show_signup">
      <div class="signup-screen">
       <div class="space-bot text-center">
        <h1 class="myFont">Sign up</h1>
        <div class="divider"></div>
      </div>
      <md-input-container class="md-block">
        <label>First Name</label>
        <input ng-model="firstname">
      </md-input-container>
      <md-input-container class="md-block">
       <label>Last Name</label>
       <input ng-model="lastname">
     </md-input-container>
     <md-input-container class="md-block">
      <label>Password</label>
      <input ng-model="passwordsign" type="password">
    </md-input-container>
    <md-input-container class="md-block">
      <label>Email</label>
      <input type="email" ng-model="emailsign">
    </md-input-container>
      <div class="space-top text-center">
       <md-button ng-click="done_signup(user)" class="md-raised md-primary">Done</md-button>
       <md-button ng-click="cancel_signup()" class="md-raised md-warn">Cancel</md-button>
     </div>
   </div>
 </div>
 <div id="preference" ng-show="show_preferences">
   <div class="signup-screen">
    <div class="space-bot text-center">
     <h1 style="font-family: fantasy;">Set your preferences</h1>
     <div class="divider"></div>
   </div>

   <md-input-container class="md-block">
     <label>Street Name</label>
     <!--input ng-model="preference.address.street"-->
     <input ng-model="streetName" googleplace/>
   </md-input-container>
   <md-input-container class="md-block">
    <label>Zipcode</label>
    <input ng-model="zipcode">
  </md-input-container>
 <!-- -->
 <md-input-container class="md-block" flex-gt-sm>
            <label>State</label>
            <md-select ng-model="state">
              <md-option ng-repeat="state in states" value="{{state.abbrev}}">
                {{state.abbrev}}
              </md-option>
            </md-select>
</md-input-container>
<!-- -->
 <md-input-container class="md-block">
   <label>Favorite Cuisine</label>
   <md-select ng-model="cuisine">
        <md-option ng-repeat="cuisine in cuisines" value="{{cuisine.favCuisine}}">
            {{cuisine.favCuisine}}
        </md-option>
    </md-select>
 </md-input-container>
 <md-input-container class="md-block">
  <label>Contact Number</label>
  <input ng-model="contactnumber">
</md-input-container>
<div class="space-top text-center">
 <!--md-button ng-click="save(preference)" class="md-raised md-primary">Save</md-button-->
 <md-button ng-click="login_user()" class="md-raised md-primary">Log In</md-button>
 <md-button ng-click="cancel_signup()" class="md-raised md-warn">Cancel</md-button>
</div>
</div>
</div>
</div>
    <!-- <div class="content">
      <div ng-view=""></div>

    </div> -->


    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.3/angular-material.min.js"></script>
    <script src="bower_components/angular-ui-router/release/angular-ui-router.js"></script>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
    <!-- <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.js"></script> -->
     <script src="bower_components/angular-rateit/dist/ng-rateit.js"></script>
    <script src="public/app.js"></script>
    <script src="public/controllers/signup.controller.js"></script>

  </body>
  </html>
